<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Benvingut</title>
    <link rel="stylesheet" href="/css/stylesCRUD.css">
    <script src="/js/deleteProduct.js" defer></script>
</head>

<body>
    <header>
        <h1>Gestió de Productes per <%= user.username %>!</h1>
        <h2><%- htmlMessage %></h2>
    </header>
    <main>
        <section>
            <h2>Llista de Productes</h2>
            <ul class="product-list">
                <% data.products.forEach(product=> { %>
                    <li class="product-item">
                        <strong>
                            <%= product.name %>
                        </strong>
                        <nav class="product-actions">
                            <ul>
                                <li><a href="/products/<%= product.id %>">Detall producte</a></li>
                                <li><a href="/products/editProducte/<%= product.id %>">Editar producte</a></li>
                                <li><button onclick="deleteProduct('<%= product.id %>')">Eliminar</button></li>
                            </ul>
                        </nav>
                    </li>
                    <% }) %>
            </ul>
        </section>
    </main>
    <div class="afegir">
        <a href="/products/add" class="btn-add-product"> Añadir nuevo producto</a>
    </div>
</body>

</html>